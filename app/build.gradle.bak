apply plugin: 'com.android.application'

android {
    namespace "ro.samp.mobile"
    compileSdkVersion 34

    defaultConfig {
        applicationId "ro.samp.mobile"
        minSdkVersion 24
        targetSdkVersion 34
        versionCode 1
        versionName "1.0"

        ndk {
            // SA-MP Mobile uses ONLY 32-bit libs
            abiFilters "armeabi-v7a"
        }
    }

    buildTypes {
        debug {
            minifyEnabled false
        }

        release {
            minifyEnabled false   // MUST BE DISABLED or SA-MP native libs crash
            shrinkResources false
        }
    }

    // REQUIRED OR .so CANNOT LOAD
    packagingOptions {
        jniLibs.useLegacyPackaging true
    }

    sourceSets {
        main {
            jniLibs.srcDirs = ['src/main/jniLibs']
        }
    }
}

repositories {
    google()
    mavenCentral()
}

dependencies {
    implementation 'androidx.core:core-ktx:1.12.0'
    implementation 'androidx.appcompat:appcompat:1.7.1'
    implementation 'com.google.android.material:material:1.11.0'
}
